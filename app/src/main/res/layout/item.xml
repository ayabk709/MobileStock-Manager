<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbarSize="5dp"
    >


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:layout_margin="15dp"

    app:cardCornerRadius="10dp"

    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/blue_gradient"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prdname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_baseline_edit_24"
                android:drawablePadding="12dp"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/txtcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_baseline_color"
                android:drawablePadding="12dp"
                android:text="Color"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_baseline_category_24"
                android:drawablePadding="12dp"
                android:layout_marginTop="18dp"
                android:text="Category"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_baseline_attach_money_24"
                android:drawablePadding="12dp"
                android:text="Price"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_baseline_format_size_24"
                android:drawablePadding="12dp"
                android:text="Quantity"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/txtCodebarre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:drawableLeft="@drawable/ic_baseline_qr_code_24"

                android:drawablePadding="12dp"
                android:padding="10dp"
                android:text="code"
                android:textColor="@color/white"
                android:textSize="19sp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="264.2dp"
            android:layout_marginLeft="70dp"
        android:layout_width="236dp"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <Button
android:id="@+id/btnremove"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"

            android:background="@drawable/ic_deletesvg"
            android:textAllCaps="false"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="70dp"
android:id="@+id/btnupdate"
            android:background="@drawable/ic_edit_round_line"
            android:textAllCaps="false" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>