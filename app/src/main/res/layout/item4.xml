<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"

    app:cardCornerRadius="10dp"

    app:cardElevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_gradient"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/purshvendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_baseline_personvendor"
                android:drawablePadding="12dp"

                android:text="   Name"

                android:textColor="@color/white"

                android:textSize="19sp" />

            <TextView
                android:id="@+id/purchprod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_baseline_company"
                android:drawablePadding="12dp"
                android:text="   Company"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/purchquanity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_baseline_home_24"
                android:drawablePadding="12dp"
                android:text="   Adress"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/purchdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:drawablePadding="12dp"
                android:text="   Mobil"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/purchprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="12dp"
                android:text="   Email"
                android:textColor="@color/white"
                android:textSize="19sp" />
            <TextView
                android:id="@+id/purchtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="12dp"
                android:text="   Email"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/removepursh"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/ic_deletesvg"
                    android:textAllCaps="false"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />


                <Button
                    android:id="@+id/editpursh"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90dp"
                    android:background="@drawable/ic_edit_round_line"
                    android:textAllCaps="false" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


